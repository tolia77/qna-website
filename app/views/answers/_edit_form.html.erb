<%= form_with(model: answer, html: {method: :patch}) do |form| %>
  <% p url_for(action: :update, controller: :answers, id: answer.id, question_id: question.id) %>
  <% if answer.errors.any? %>
    <div style="color: red">
      <ul>
        <% answer.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :text, style: "display: block" %>
    <%= form.text_area :text, size: '100x10', class: 'form-control' %>
  </div>

  <div>
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>