<%= form_with(model: answer, url: question_answers_path(question), html: {method: :post}) do |form| %>
  <% if answer.errors.any? %>
    <div style="color: red">
      <ul>
        <% answer.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :text, 'Your answer', style: "display: block" %>
    <%= form.text_area :text, size: '100x10' %>
  </div>

  <div>
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>
