<p style="color: green"><%= notice %></p>

<h1>Categories</h1>

<% if user_signed_in? && current_user.admin? %>
  <%= turbo_frame_tag 'create_category' do %>
    <%= link_to "New category", new_category_path %>
  <% end %>
<% end %>
<div id="categories">
  <% @categories.each do |category| %>
    <%= render category %>
  <% end %>
</div>
