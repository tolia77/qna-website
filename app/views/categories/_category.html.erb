<%= turbo_frame_tag(dom_id category) do %>
  <div class="category" id="<%= dom_id category %>">
    <div class="category-header">
      <%= image_tag(category.image, class: 'category-img') if category.image.attached?%>
      <p>
        <%= link_to category.name, category_questions_path(category), data: { turbo: false } %>
      </p>
    </div>
    <% if user_signed_in? && current_user.admin? %>
      <%= link_to 'Edit', edit_category_path(category) %>
      <%= link_to 'Delete', category, data: { turbo_method: :delete } %>
    <% end %>
  </div>
<% end %>